#include "STD_TYPES.h"
#include "BIT_MATH.h"

#include "RCC_interface.h"
#include "GPIO_interface.h"
#include "STK_interface.h"

#include "LED_Matrix_interface.h"

const u8 DisplayM[8] = {0, 254, 4, 8, 16, 8, 4, 254};
const u8 DisplayA[8] = {0, 252, 22, 19, 17, 19, 22, 252};

u8 * DisplayChar;

void Display(void);

void main(void)
{
    MRCC_voidInit();
    MRCC_voidEnablePeripheralClock(RCC_AHB1,GPIOA_ID);
    MRCC_voidEnablePeripheralClock(RCC_AHB1,GPIOB_ID);
    MSTK_voidInit();
    HLED_MATRIX_voidInit();


    while(1)
    {

    }
}


void Display(void)
{
	HLED_MATRIX_voidDisplay(DisplayChar);
}


void ChangeDisplay(u8 Copy_u8Button)
{
	switch(Copy_u8Button)
	{
		case 4:
			DisplayChar = &DisplayA;
		    MSTK_voidSetPeriodicInterval(2500,&	Display);
			break;
		case 5:
			DisplayChar = &DisplayM;
		    MSTK_voidSetPeriodicInterval(2500,&	Display);
			break;
		default:
			break;
	}
}
